@template person(person, file, otherFiles, footnotes, root, auth)@

@include header()@

@include head(person, root)@

<body>
    @include nav(file, otherFiles, person, auth)@

    <article class="person">
        <section class="parents">
            <div class="father">
                <span class="relation">father:</span>
                @include linkUp(person.getFather(), person, auth)@
            </div>
            <div class="mother">
                <span class="relation">mother:</span>
                @include linkUp(person.getMother(), person, auth)@
            </div>
        </section>
        <header>
            <hr class="sim">
            <h1 class="personName">@nu.mine.mosher.Util.esc(person.toString())@</h1>
        </header>

        @include events(person.getEventsWithDittoedPlaces(), footnotes, auth)@

        @include partnerships(person.getPartnerships(), footnotes, person.isPrivate(), auth)@

        @include footnotes(footnotes)@
    </article>
</body>

@include footer()@
