@template linkSource(source,page,text)@
<span class="source">
    @if (net.sourceforge.templat.Util.isNull(source))@
        &nbsp;
    @else@
        <aside class="citation">
            @nu.mine.mosher.Util.styleCitation(page)@
            {<a href="../sources/@source.getUuid()@">@source.getTitle()@</a>}
        </aside>
        <div class="note">
            @nu.mine.mosher.Util.teiStyle(text)@
        </div>
    @end if@
</span>
