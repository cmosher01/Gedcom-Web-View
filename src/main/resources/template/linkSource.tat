@template linkSource(source,page,text)@
<span class="source">
    @if (Util.isNull(source))@
        &nbsp;
    @else@
        <aside class="citation">
            @nu.mine.mosher.gedcom.GedcomWebView.styleCitation(page)@
            {<a href="../sources/@source.getUuid()@">@source.getTitle()@</a>}
            "@text@"
        </aside>
    @end if@
</span>
