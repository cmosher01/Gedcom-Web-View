@template linkDown(person, auth)@
<span class="name">
    @if (net.sourceforge.templat.Util.isNull(person))@
        [unknown]
    @else@
        @if (!nu.mine.mosher.Util.privatizeParents(person, auth))@
            <a href="@person.getUuid()@">@include personLinkName(person)@</a><!--
            -->@if (nu.mine.mosher.Util.hasIssue(person))@<!--
                --><span class="hasIssue" /><!--
            -->@end if@
        @end if@
    @end if@
</span>
