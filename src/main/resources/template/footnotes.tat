@template footnotes(notes)@

<hr class="sec">
<section class="footnotes">
    <ul>
        @loop i : notes.size()@
            <li id="f@net.sourceforge.templat.Num.oneOrigin(i)@">
                <span class="footnum">@nu.mine.mosher.Util.footnum(i)@</span><!--
                (no whitespace between footnote number and following text)
                -->@if (nu.mine.mosher.Util.isCitation(notes,i))@<!--
                    -->@include linkSource(notes.note(net.sourceforge.templat.Num.oneOrigin(i)))@<!--
                -->@else@<!--
                    -->@include footnote(notes.note(net.sourceforge.templat.Num.oneOrigin(i)))@<!--
                -->@end if@
            </li>
        @end loop@
    </ul>
</section>
